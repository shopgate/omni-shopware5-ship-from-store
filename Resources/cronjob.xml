<?xml version="1.0" encoding="utf-8"?>
<cronjobs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/5.5/engine/Shopware/Components/Plugin/schema/cronjob.xsd">

    <cronjob>
        <name>Shopgate Bestellexport</name>
        <action>Shopware_CronJob_SgateOrderExport</action>
        <active>1</active>
        <interval>900</interval>
        <disableOnError>false</disableOnError>
    </cronjob>

    <cronjob>
        <name>Shopgate Bestandsimport</name>
        <action>Shopware_CronJob_SgateStockImport</action>
        <active>1</active>
        <interval>900</interval>
        <disableOnError>false</disableOnError>
    </cronjob>

</cronjobs>
