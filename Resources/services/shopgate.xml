<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <!-- ShopgateSdkRegistry -->
        <service id="SgateShipFromStore\Components\ShopgateSdkRegistry">
            <argument type="service" id="sgate_ship_from_store.config.default" />
            <argument type="service" id="sgate_ship_from_store.config.per_shop" />
        </service>

        <!-- default sdk -->
        <service id="sgate_ship_from_store.sdk.default" class="Shopgate\ConnectSdk\ShopgateSdk">
            <factory service="SgateShipFromStore\Components\ShopgateSdkRegistry" method="getShopgateSdk" />
        </service>

        <!-- default order service -->
        <service id="sgate_ship_from_store.shopgate_service.order" class="Shopgate\ConnectSdk\Service\Order">
            <factory service="sgate_ship_from_store.sdk.default" method="getOrderService" />
        </service>

        <!-- default catalog service -->
        <service id="sgate_ship_from_store.shopgate_service.catalog" class="Shopgate\ConnectSdk\Service\Catalog">
            <factory service="sgate_ship_from_store.sdk.default" method="getCatalogService" />
        </service>

    </services>
</container>